{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Adspace Exchange" %}
{% endblock %}

{% block formHtml %}
    <div class="row">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item"><a class="nav-link active" href="#general" role="tab" data-toggle="tab"><span>{% trans "General" %}</span></a></li>
        </ul>
        <div class="col-md-12">
            <form id="videoinEditForm" class="XiboForm form-horizontal" method="put" action="{{ url_for("module.widget.edit", {id: module.widget.widgetId}) }}">
                <div class="tab-content">
                    <div class="tab-pane active" id="general">
                        {% set message %}{% trans "Adspace Exchange facilitates advertising content delivered to your network via Adspace's demand partners." %}{% endset %}
                        {{ forms.message(message, "alert alert-info") }}
                    </div>

                </div>
            </form>
        </div>
    </div>
{% endblock %}
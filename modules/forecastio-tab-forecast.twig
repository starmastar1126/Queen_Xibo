{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <table id="layouts" class="table table-striped">
                <thead>
                <tr>
                    <th>{% trans "Forecast" %}</th>
                    <th>{% trans "Substitute" %}</th>
                    <th>{% trans "Value" %}</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    {% for item in forecast %}
                        <tr>
                            <td>{{ item.forecast }}</td>
                            <td>{{ item.key }}</td>
                            <td>{{ item.value }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
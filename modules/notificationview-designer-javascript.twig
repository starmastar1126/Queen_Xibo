<script type="text/javascript">


    // Runs after form opens
    function notificationview_form_edit_open() {
        
        // Set duration field, using the helper ()
        formHelpers.setupCheckboxInputFields($(this).find('form'), '#useDuration', '.duration-fields');

        // Using form Editor
        if($(this).data('formEditorOnly')) {
            formHelpers.setupCKEditor(this, null, 'template', false, '[Subject] - [Body]');
        } else { // Using viewer Editor
            
            // Hide default form input
            $(this).find('.html-editor-group').hide();

            // Show edit button on the viewer
            $(this).data().viewerObject.setupInlineEditor('template', true, '[Subject] - [Body]');
        }

        formHelpers.setupCKEditor(this, null, 'noDataMessage');
    }

    // Runs before form submit
    function notificationview_form_edit_submit() {        

        // Update text callback fields
        formHelpers.updateCKEditor();
    }
    
</script>
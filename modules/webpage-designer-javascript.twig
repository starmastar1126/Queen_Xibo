<script type="text/javascript">

    // Runs after form opens
    function webpage_form_add_open() {
        
        // Set duration field, using the helper ()
        formHelpers.setupCheckboxInputFields($(this).find('form'), '#useDuration', '.duration-fields');

        // Set command code field, using the helper ()
        formHelpers.setupObjectValueInputFields($(this).find('form'), '#modeId', ['', '.webpage-widths, .webpage-offsets', '.webpage-widths'], [1, 2, 3]);
    }

    // Runs after form opens
    function webpage_form_edit_open() {

        // Use same method as form add open
        webpage_form_add_open.bind(this)();
    }

</script>
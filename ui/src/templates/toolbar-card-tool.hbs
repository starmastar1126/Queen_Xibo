<div class="toolbar-card" 
    data-toggle="tooltip" 
    data-type="tool"
    data-sub-type="{{type}}"
    title="{{description}}"
    data-one-click-add="{{oneClickAdd}}"
    drop-to="{{dropTo}}">

    <div class="add-area action-area" title="{{trans.add}}" data-toggle="tooltip" data-placement="left">
        <i class="fa fa-plus"></i>
    </div>
    <div class="drag-area action-area" title="{{trans.grab}}" data-toggle="tooltip" data-placement="right">
        <i class="fa fa-hand-rock-o"></i>
    </div>

    <i class="fa tool-icon-{{type}} card-icon"></i>
    
    <span class="card-title">{{name}}</span>
</div>
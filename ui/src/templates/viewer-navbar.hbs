<nav class="navbar viewer-navbar designer-{{type}}">
    {{! Left region }}
    <div class="pull-left">
        {{#if renderLayout}}
            <button type="button" id="play-btn" class="btn btn-sm" data-toggle="tooltip" data-container="#layout-viewer-navbar" data-placement="right" data-title="{{ trans.playPreviewLayout }}">
                <i class="fa fa-play-circle"></i>
            </button>
            {{#unless readOnlyModeOn}}
                <button type="button" id="navigator-edit-btn" class="btn btn-sm hide-on-fs" data-toggle="tooltip" data-container="#layout-viewer-navbar" data-placement="bottom" data-title="{{ trans.editLayout }}">
                    <i class="fa fa-edit"></i>
                </button>
            {{/unless}}
        {{else}}
            <button type="button" id="back-btn" class="btn btn-sm" data-toggle="tooltip" data-container="#layout-viewer-navbar" data-placement="right" data-title="{{ trans.backToLayout }}">
                <i class="fa-arrow-alt-circle-left fas"></i>
            </button>
        
            <button type="button" id="inline-editor-save" class="btn btn-sm" data-toggle="tooltip" data-container="#layout-viewer-navbar" data-placement="left"
                data-title="{{ trans.saveEditorChanges }}">
                <i class="fa fa-save"></i>
            </button>
        {{/if}}

        {{!-- Full screen button --}}
        <button type="button" id="fs-btn" class="btn btn-sm tooltip-always-on" data-toggle="tooltip" data-container="#layout-viewer-navbar" data-placement="bottom"
            data-title="{{ trans.toggleFullscreen }}">
            <i class="fas fa-arrows-alt hide-on-fs"></i>
            <i class="fas fa-compress-arrows-alt show-on-fs"></i>
        </button>
    </div>

    {{! Right region }}
    <div class="pull-right">
        {{! Element Info }}
        {{#if extra}}
            <div class="info inline-editor-hide d-inline">
                <span class="label-name align-middle" title="{{extra.moduleName}}">
                    "{{extra.moduleName}}" ({{extra.type}})
                </span>
                <span class="label label-time align-middle">
                    {{extra.duration}} / {{extra.regionDuration}}
                </span>
            </div>
        {{else}}
            <div class="info inline-editor-hide d-inline">
                <span class="label-name align-middle" title="{{name}}">
                    "{{name}}" ({{type}})
                </span>
            </div>
        {{/if}}

        {{!-- Paging controls --}}
        {{#if pagingEnable}}
            <span class="paging inline-editor-hide pl-1">
                <button type="button" id="left-btn" class="btn btn-sm" data-toggle="tooltip" data-container="#layout-viewer-navbar" data-placement="bottom" data-title="{{ trans.previousWidget }}">
                    <i class="fa fa-arrow-left"></i>
                </button>
                <span class="label align-middle">
                    {{currentItem}} / {{totalItems}}
                </span>
                <button type="button" id="right-btn" class="btn btn-sm" data-toggle="tooltip" data-container="#layout-viewer-navbar" data-placement="bottom" data-title="{{ trans.nextWidget }}">
                    <i class="fa fa-arrow-right"></i>
                </button>
            </span>
        {{/if}}
    </div>

    {{! Inline Editor templates }}
    <div class="inline-editor-templates inline-editor-opened pull-right"></div>
</nav>
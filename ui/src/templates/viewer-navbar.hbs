<div class="viewer-navbar designer-{{type}}">

    <div class="row">
        <div class="viewer-navbar-controls col-xs-3">
            {{! Inline Editor controls}}
            <div class="inline-editor-buttons">
                <button id="inline-edit-btn" class="fa fa-edit btn btn-sm btn-warning inline-editor-closed" title="Open inline editor"></button>
                <button id="inline-save-btn" class="fa fa-save btn btn-sm btn-success inline-editor-opened" title="Save inline editor"></button>
                <button id="inline-close-btn" class="fa fa-close btn btn-sm btn-danger inline-editor-opened" title="Close inline editor"></button>
            </div>

            {{!-- Paging controls --}}
            {{#if pagingEnable}}
                <div class="paging inline-editor-hide">
                    <button type="button" id="left-btn" class="btn btn-sm btn-primary">
                        <i class="fa fa-arrow-left"></i>
                    </button>
                    <button class="btn btn-sm btn-default" disabled>
                        {{extra.current_item}} / {{extra.number_items}}
                    </button>
                    <button type="button" id="right-btn" class="btn btn-sm btn-primary">
                        <i class="fa fa-arrow-right"></i>
                    </button>
                </div>
            {{/if}}
        </div>

        <div class="viewer-navbar-content col-xs-9">
            {{! Inline Editor templates}}
            <div class="inline-editor-templates inline-editor-opened container-fluid"></div>

            {{! Element Info}}
            <div class="info inline-editor-hide">
                <span class="label">
                    "{{extra.moduleName}}" ({{extra.type}})
                </span>
        
                <span class="label label-default">
                    {{extra.duration}} / {{extra.regionDuration}}
                </span>
            </div>
        </div>
    </div>
</div>
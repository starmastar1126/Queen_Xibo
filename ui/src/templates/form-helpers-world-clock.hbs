<div class="col-12">
    <div class="form-inline text-center row bg-info p-2">
        <div class="form-group col-5 localSelect">
            <select class="form-control" name="clockTimezone[]">
                <option value selected>Timezone</option>
                {{#each timezones}}
                    <option value="{{ id }}" {{#eq id ../clockTimezone}}selected{{/eq}}>{{ value }}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group col-3">
            <input class="form-control" name="clockLabel[]" type="text" value="{{ clockLabel }}" placeholder="Label" />
        </div>

        <div class="form-group col-3">
            <input type="hidden" name="clockHighlightValue[]" {{#if clockHighlight}}value="on"{{/if}}>
            <input type="checkbox" name="clockHighlight[]" {{#if clockHighlight}}checked{{/if}}>
            <label for="clockHighlight[]">Highlight?</label>
        </div>

        <button class="btn btn-primary pull-right"><i class="fa {{ buttonGlyph }}"></i></button>
    </div>
</div>
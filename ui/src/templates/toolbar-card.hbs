<div class="toolbar-card" 
    data-toggle="tooltip" 
    data-type="module" 
    data-sub-type="{{type}}"
    data-region-specific="{{regionSpecific}}"
    data-valid-ext="{{ validExtensions }}"
    data-max-size="{{ maxSize }}" 
    data-max-size-message="{{ maxSizeMessage }}"
    title="{{description}}"
    data-one-click-add="playlist"
    drop-to="region">

    <div class="add-area" title="{{trans.add}}" data-toggle="tooltip" data-placement="left">
        <i class="fa fa-plus fa-2x"></i>
    </div>
    <div class="drag-area" title="{{trans.grab}}" data-toggle="tooltip" data-placement="right">
        <i class="fa fa-hand-rock-o fa-2x"></i>
    </div>

    <div class="img-container">
        <i class="fa module-icon-{{type}} fa-3x"></i>
    </div>
    
    <p class="card-title">{{name}}</p>
</div>
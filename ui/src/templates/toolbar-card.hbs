<div class="toolbar-card {{#if favourited}}favourited{{/if}}" 
    data-toggle="tooltip" 
    data-type="module" 
    data-sub-type="{{type}}"
    data-region-specific="{{regionSpecific}}"
    data-valid-ext="{{ validExtensions }}"
    data-max-size="{{ maxSize }}" 
    data-max-size-message="{{ maxSizeMessage }}"
    title="{{description}}"
    
    {{#each oneClickAdd}}
        {{#eq this ../mainObjectType}}data-one-click-add="{{this}}"{{/eq}}
    {{/each}}

    drop-to="region">
    
    <div class="btn-favourite" title="{{trans.addAsFavourite}}">
        <i class="{{#if favourited}}fas{{else}}far{{/if}} fa-star"></i>
    </div>

    <div class="add-area action-area" title="{{trans.add}}" data-toggle="tooltip" data-placement="left">
        <i class="fa fa-plus"></i>
    </div>
    <div class="drag-area action-area" title="{{trans.grab}}" data-toggle="tooltip" data-placement="right">
        <i class="fa fa-hand-rock-o"></i>
    </div>

    <i class="fa module-icon-{{type}} card-icon"></i>
    
    <span class="card-title">{{name}}</span>
</div>
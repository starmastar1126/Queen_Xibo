<nav class="navbar navbar-dark navbar-expand-md flex-column {{#if opened}}opened{{/if}}">
    <div class="container-toolbar container-fluid flex-column flex-column justify-content-between">
        {{!-- Menu buttons --}}
        <ul class="navbar-nav navbar-buttons flex-column toolbar-menu-left hide-on-read-only hide-on-lock">
            {{#each menuItems}}
                <li>
                    <a id="btn-menu-{{@index}}" class="btn-menu-option {{#if disabled}}d-none{{/if}} {{state}}" data-container=".editor-side-bar"
                        data-toggle="tooltip" data-title="{{itemTitle}}" data-test="toolbarTabs">
                        <i class="fas fa-{{itemIcon}}"></i>
                    </a>
                </li>
            {{/each}}
        </ul>

        <ul class="navbar-nav flex-column toolbar-menu-content hide-on-read-only hide-on-lock">
            {{!-- Menu items/tabs --}}
            {{#each menuItems}}
                <div id="content-{{@index}}" class="content {{#if disabled}}d-none{{/if}}"></div>
            {{/each}}
        </ul>

        {{!-- Bottom buttons --}}
        <ul class="navbar-nav flex-column navbar-right toolbar-menu-right hide-on-read-only hide-on-lock">
            {{#if showOptions}}
                <li>
                    <a id="undoContainer" data-toggle="tooltip" data-container=".editor-side-bar" data-placement="top"
                        data-title="{{trans.undoActiveTitle}}"
                        class="navbar-peek-button tooltip-always-on undo-container navbar-undo {{#if undoActive}}active{{/if}}">
                        <i class="fa fa-undo"></i>
                    </a>
                </li>

                <li>
                    <a id="multiSelectContainer" data-toggle="tooltip" data-container=".editor-side-bar"
                        data-placement="top" data-title="{{trans.selectMultipleWidgets}}"
                        class="navbar-peek-button navbar-multiselect active">
                        <i class="fa fa-object-group"></i>
                    </a>
                </li>

                <li>
                    <a id="trashContainer" data-toggle="tooltip" data-container=".editor-side-bar" data-placement="top"
                        data-title="{{trans.trashBinActiveTitle}}"
                        class="navbar-peek-button navbar-bin trash-container {{#if trashActive}}active{{/if}}">
                        <i class="fa fa-trash"></i>
                    </a>
                </li>

                <li class="dropright navbar-submenu navbar-submenu-options" data-toggle="tooltip"
                    data-container=".editor-side-bar" data-placement="top" data-title="{{trans.options}}">
                    <a id="optionsContainer" class="dropdown-toggle btn-menu-option option-container"
                        data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-bars"></i>
                    </a>

                    <div class="dropdown-menu dropdown-menu-right navbar-submenu-container navbar-submenu-options-container"
                        aria-labelledby="optionsContainer">
                        <a class="dropdown-item">
                            <label
                                class="navbar-submenu-item navbar-submenu-item-options displayTooltips-container tooltip-always-on"
                                for="displayTooltips" data-toggle="tooltip" data-container=".editor-side-bar"
                                data-placement="left" data-title="{{trans.displayTooltipsTitle}}" accesskey="">
                                <input type="checkbox" id="displayTooltips" name="displayTooltips" {{#if
                                    displayTooltips}}checked{{/if}}>
                                <span>{{trans.displayTooltipsName}}</span>
                            </label>
                        </a>
                        <a class="dropdown-item">
                            <div id="resetTour"
                                class="navbar-submenu-item navbar-submenu-item-options tooltip-always-on d-none"
                                data-toggle="tooltip" data-container=".editor-side-bar" data-placement="bottom"
                                data-title="{{trans.resetTourTitle}}" href="#">
                                <i class="fa fa-repeat"></i>
                                <span>{{trans.resetTour}}</span>
                            </div>
                        </a </div>
                </li>
            {{/if}}
        </ul>
    </div>
</nav>
<div id="region_info_{{ id }}" data-region="{{ id }}" data-playlist-id="{{playlists.playlistId}}" class="designer-region-info {{selectedFlag}}">
    <div class="region-preview">
        {{!-- Preview --}}
        <div class="region-preview-background"
            style="
                width: {{timelinePreviewContainer.width}}px;
                height: {{timelinePreviewContainer.height}}px;
                top: {{timelinePreviewContainer.top}}px;
                left: {{timelinePreviewContainer.left}}px;">

            <div class="region-preview-element"
                style="
                    width: {{timelinePreview.width}}px;
                    height: {{timelinePreview.height}}px;
                    top: {{timelinePreview.top}}px;
                    left: {{timelinePreview.left}}px;">
            </div>
        </div>
    </div>

    <div class="region-controls">
        {{!-- Controls --}}
        <div class="region-label">
            {{ name }}
        </div>
        {{#unless readOnlyModeOn}}
            <div class="region-actions">
                <a class="edit-region">
                    <i class="fa fa-edit" data-content="tooltip" data-toggle="tooltip" data-placement="right" data-title="{{trans.editRegion}}"></i>
                </a>
                <a class="open-playlist-editor">
                    <i class="fa fa-list" data-content="tooltip" data-toggle="tooltip" data-placement="right" data-title="{{trans.openRegionAsPlaylist}}"></i>
                </a>
                {{#if actions }}
                    <a class="open-region-actions">
                        <i class="fa fa-paper-plane tooltip-always-on" data-content="tooltip" data-toggle="tooltip" data-placement="right" data-title="{{trans.regionActions}} {{ actions.length}}" ></i>
                    </a>
                {{/if}}
            </div>
        {{/unless}}
    </div>
</div>
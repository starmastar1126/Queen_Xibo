<div id="{{ id }}" data-type="widget" class="designer-widget designer-widget-ghost {{#if hideDetails}}lightMode{{/if}}" style="
width: {{ durationPercentage }}%;">
    <span class="widgetSubType tooltip-always-on" data-toggle="tooltip" data-container="#layout-timeline" data-title="{{moduleName}}">

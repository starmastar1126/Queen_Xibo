<div id="actions-drawer-toggle" class="btn btn-toggle"
    data-toggle="tooltip" data-container="#actions-drawer" data-title="{{ trans.toggleDrawer }}">
    <i class="fa fa-inbox"></i>
</div>

<div id="actions-drawer-content" data-type="region" class="editable">
    {{#if drawer.isEmpty}}
        <div id="actions-drawer-empty-message">
            {{#if readOnlyModeOn}}
                <span>{{ trans.notInitEmptyDrawer }}</span>
            {{else}}
                <span>{{ trans.emptyDrawer }}</span>
            {{/if}}
        </div>
    {{else}}
        <div class="actions-drawer-controls">
            <div id="actions-drawer-search-bar">
                <i class="fa fa-search"></i>
                <input id="inputSearch" name="inputSearch" value="{{ searchQuery }}" type="text" autoComplete="off" placeholder="{{ trans.search }}">
            </div>
        </div>

        {{!-- Draw widgets --}}
        <div id="actions-drawer-widgets">
            {{#each widgets}}
                {{> drawer-widget trans=../trans}}
            {{/each}}
        </div>
    {{/if}}
</div>
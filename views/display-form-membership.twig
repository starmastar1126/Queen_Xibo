{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Manage Membership" %}
{% endblock %}

{% block formButtons %}
    {% trans "Save" %}, $("#MembersForm").submit()
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Help" %}, XiboHelpRender("{{ help.permissions }}")
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="MembersForm" class="XiboForm form-horizontal" method="post" action="{{ urlFor("group.members", {id: group.groupId}) }}">
                {% set helpText %}{% trans %}Check or un-check the options against each user to control whether they are a member of not.{% endtrans %}{% endset %}
                {{ forms.message(helpText) }}
                <table class="table table-bordered">
                    <tr>
                        <th>{{ display.display }}</th>
                        <th>{% trans "Member" %}</th>
                    </tr>
                    {% for item in checkboxes %}
                        <tr>
                            <td>{{ item.name }}</td>
                            <td><input type="checkbox" name="displayGroupId[]" value="{{ item.id }}" {{ item.value_checked }}></td>
                        </tr>
                    {% endfor %}
                </table>
            </form>
        </div>
    </div>
{% endblock %}
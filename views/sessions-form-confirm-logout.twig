{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Logout User" %}
{% endblock %}

{% block formButtons %}
    {% trans "Help" %}, XiboHelpRender("{{ help }}")
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Yes" %}, $("#sessionsConfirmLogoutForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="sessionsConfirmLogoutForm" class="XiboForm form-horizontal" method="post" action="{{ urlFor("sessions.confirm.logout", {id: userId}) }}">
                {% set message %}{% trans "Are you sure you want to logout this user?" %}{% endset %}
                {{ forms.message(message) }}
            </form>
        </div>
    </div>
{% endblock %}
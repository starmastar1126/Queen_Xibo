{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Edit Command" %}
{% endblock %}

{% block formButtons %}
    {% trans "Help" %}, XiboHelpRender("{{ help }}")
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Save" %}, $("#commandEditForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="commandEditForm" class="XiboForm form-horizontal" method="put" action="{{ urlFor("command.edit", {id: command.commandId}) }}">

                {% set title %}{% trans "Name" %}{% endset %}
                {% set helpText %}{% trans "The Name for this Command" %}{% endset %}
                {{ forms.input("command", title, command.command, helpText, "", "required") }}

                {% set title %}{% trans "Code" %}{% endset %}
                {% set helpText %}{% trans "The Code for this Command" %}{% endset %}
                {{ forms.input("code", title, command.code, helpText, "", "required") }}

                {% set title %}{% trans "Description" %}{% endset %}
                {% set helpText %}{% trans "Description of Command" %}{% endset %}
                {{ forms.textarea("description", title, command.description, helpText) }}

            </form>
        </div>
    </div>
{% endblock %}
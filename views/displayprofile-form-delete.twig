{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Delete Profile" %}
{% endblock %}

{% block formButtons %}
    {% trans "Help" %}, XiboHelpRender("{{ help }}")
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Save" %}, $("#displayProfileDeleteForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="displayProfileDeleteForm" class="XiboForm form-horizontal" method="delete" action="{{ urlFor("displayProfile.delete", {id: displayProfile.displayProfileId}) }}">
                {{forms.message("Are you sure you want to delete this display profile?") }}
            </form>
        </div>
    </div>
{% endblock %}
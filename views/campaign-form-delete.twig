{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Delete Campaign" %}
{% endblock %}

{% block formButtons %}
    {% trans "Save" %}, $("#campaignDeleteForm").submit()
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Help" %}, XiboHelpRender("{{ help }}")
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="campaignDeleteForm" class="XiboForm form-horizontal" method="delete" action="{{ urlFor("campaign.delete", {"id": campaign.campaignId}) }}">

            </form>
        </div>
    </div>
{% endblock %}
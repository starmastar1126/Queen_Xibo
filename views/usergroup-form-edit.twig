{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Edit User Group" %}
{% endblock %}

{% block formButtons %}
    {% trans "Save" %}, $("#userGroupEditForm").submit()
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Help" %}, XiboHelpRender("{{ help.edit }}")
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="userGroupEditForm" class="XiboForm form-horizontal" method="put" action="{{ urlFor("group.edit", {"id": group.groupId}) }}">
                {{ forms.text("group", "Name", group.group, "The Name for this User Group", "", "required maxlength='50'") }}
                {{ forms.number("libraryQuota", "Library Quota", group.libraryQuota, "The quota in Kb that should be applied. Enter 0 for no quota.") }}
            </form>
        </div>
    </div>
{% endblock %}
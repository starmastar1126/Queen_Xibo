{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Delete Display Group" %}
{% endblock %}

{% block formButtons %}
    {% trans "Yes" %}, $("#displayGroupDeleteForm").submit()
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Help" %}, XiboHelpRender("{{ help }}")
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="displayGroupDeleteForm" class="XiboForm form-horizontal" method="delete" action="{{ urlFor("displayGroup.delete", {"id": displayGroup.displayGroupId}) }}">
               {{forms.message("Are you sure you want to delete this display group? This cannot be undone") }}
            </form>
        </div>
    </div>
{% endblock %}
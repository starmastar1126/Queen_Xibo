{% extends "authed.twig" %}
{% block pageContent %}
    <div class="card mx-auto my-auto" {% if media.orientation == 'landscape' %} style="max-width: 50%;" {% else %} style="max-width: 30%;" {% endif %}>
        <img src="{{ media.thumbnail }}" class="card-img-top" alt="{{ media.name }}">
        <div class="card-body">
            <h5 class="card-title">{% trans "Name" %} : {{ media.name }}</h5>
            <p class="card-text">{% trans "Tags" %} : {{ media.tags }}</p>
            <p class="card-text">{% trans "Type" %} : {{ media.mediaType }}</p>
            <p class="card-text">{% trans "Orientation" %} : {{ media.orientation }}</p>
            <p class="card-text">{% trans "File Size" %} : {{ media.fileSizeFormatted }}</p>
            <a href="{{ url_for("library.view")}}" class="btn btn-primary">Go back to Library page</a>
        </div>
    </div>
{% endblock %}